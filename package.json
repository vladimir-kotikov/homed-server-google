{
  "name": "homed-server-google",
  "version": "1.0.0",
  "description": "Google Smart Home integration server for Homed platform",
  "license": "ISC",
  "author": "",
  "main": "src/index.ts",
  "type": "module",
  "engines": {
    "node": "25.x"
  },
  "private": true,
  "scripts": {
    "dev": "node --watch src/index.ts",
    "start": "node src/index.ts",
    "lint": "eslint src tests && tsc",
    "format": "prettier --write src tests; eslint src tests --fix",
    "test": "vitest run --globals tests/unit",
    "test:all": "npx npm-run-all --parallel test test:integration",
    "test:integration": "vitest run --no-file-parallelism --globals tests/integration",
    "prepare": "husky",
    "migrations": "drizzle-kit push --dialect sqlite --schema src/db/schema.ts --url dev.db"
  },
  "dependencies": {
    "@tinyhttp/logger": "^2.1.0",
    "better-sqlite3": "^12.6.2",
    "better-sqlite3-session-store": "^0.1.0",
    "body-parser": "^2.2.2",
    "connect-ensure-login": "^0.1.1",
    "debug": "^4.4.3",
    "drizzle-orm": "^0.45.1",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "jsonwebtoken": "^9.0.3",
    "mqtt": "^5.14.1",
    "oauth2orize": "^1.12.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-oauth2-client-password": "^0.1.2",
    "ts-pattern": "^5.9.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/connect-ensure-login": "^0.1.9",
    "@types/debug": "^4.1.12",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.10",
    "@types/oauth2orize": "^1.11.5",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-oauth2-client-password": "^0.1.6",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  }
}
